package com.example.carplay_android.services;

import android.app.Service;
import android.content.Intent;
import android.os.IBinder;
import android.util.Log;

import androidx.annotation.Nullable;

public class TaskRemovalDetectorService extends Service {

    private static final String TAG = "TaskRemovalDetector";

    @Nullable
    @Override
    public IBinder onBind(Intent intent) {
        return null;
    }

    @Override
    public int onStartCommand(Intent intent, int flags, int startId) {
        Log.d(TAG, "TaskRemovalDetectorService started");
        return START_NOT_STICKY;
    }

    @Override
    public void onTaskRemoved(Intent rootIntent) {
        Log.d(TAG, "Task removed, stopping NotificationService.");
        // Stop the main notification service
        stopService(new Intent(this, NotificationService.class));
        // Stop this detector service
        stopSelf();
        super.onTaskRemoved(rootIntent);
    }
}